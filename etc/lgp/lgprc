# explanation of the available checkers
[LGP-CHECK]

# force the inclusion of other check functions
#include=

# force the exclusion of other check functions
#exclude=

# set a specific check functions list
#set=



# Lgp tagger class
# Substitution variables are: $project, $version, $debian_version, $debian_revision, $distrib and $arch
# Specific options are added. See lgp tag --help
[LGP-TAG]

# tag format examples
upstream=$project-version-$version
debian=$project-debian-version-$debian_version
debian_revision=debrevision-$debian_revision

# Logilab policy
logilab=upstream, debian

# list of tag templates to apply by default
# '$version' is used by default if not defined
default=logilab
